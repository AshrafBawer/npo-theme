

<% include ../partials/header %>
<% include ../partials/sidebar %>
<div class="pusher">
  <!-- Site content !-->
   <div id="admin-blog" class="ui container">
    <h1 class="h1 center">Admin Blog Panel</h1> 
    <form class="ui form" id="post-create-form">
     <h4 class="ui dividing header h2">Create new post</h4>
     <div class="field">
       <div class="two fields">
         <div class="field">
            <label>Post Title</label>
           <input type="text" id="post-title" name="title" required placeholder="Title of the post">
         </div>
         <div class="field">
            <label>Post's Author <span class="optional">optional</span></label>
           <input id="post-author" type="text" name="author" placeholder="Author">
         </div>
       </div>
     </div>
     <div class="field">
        <label>Image Link <span class="optional">optional</span></label>
        <input id="post-image" type="text" name="image" placeholder="Paste image link here">
     </div>
     <div class="field">
         <label>Post Body</label>
         <textarea required name="body" id="post-body" cols="30" rows="10"></textarea>
     </div>
     <button class="ui button" >Create</button>
     </form>
     <div id="posts">
       
     </div>
   </div>
</div> 
<% include ../partials/footer %>






